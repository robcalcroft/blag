{{#> container }}
  <article class="post">
    <h1>{{title}}</h1>
    <div class="subtitle">
      {{getDateString created}}
      &#8226;
      {{readingTime}}
      &#8226;
      <a href="/">Go home</a>
    </div>
    {{{post}}}
    <div class="author">
      <img src="author.jpg" alt="Rob Calcroft the author" class="author__image" />
      <div class="author__info">Rob is a web engineer with a focus on performance, simple code and accessible design</div>
    </div>
  </article>
{{/container}}
